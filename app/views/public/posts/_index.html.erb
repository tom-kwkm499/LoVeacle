<div class="container">
  <% posts.each do |post| %>
    <div class="card mb-4 shadow-sm">
      <div class="card-header d-flex align-items-center">
        <div class="d-flex align-items-center position-relative" style="height: 80px; width: 100px;">
          <!-- プロフィール画像 -->
          <%= image_tag post.car.user.get_profile_image,
            class: "rounded-circle position-absolute",
            style: "height: 55px; width: 55px; z-index: 1; left: 0; top: 0; border: 2px solid brown;"
          %>
        
          <!-- 車両画像 -->
          <%= image_tag post.car.get_car_image,
            class: "rounded-circle position-absolute",
            style: "height: 55px; width: 55px; z-index: 2; left: 35px; top: 20px; border: 2px solid brown;"
          %>
        </div>
        <!-- ユーザー名 / 車名 -->
        <div>
          <strong><%= post.car.user.name %></strong><br>
          <small class="text-muted"><%= post.car.manufacturer %> / <%= post.car.car_name %></small>
        </div>
      </div>

      <!-- 中央：投稿画像 -->
      <% if post.post_image.attached? %>
        <div class="text-center mt-3">
          <%= image_tag post.post_image, class: "img-fluid rounded", style: "max-height: 300px;" %>
        </div>
      <% end %>

      <!-- 下部：タイトル + 内容 -->
      <div class="card-body">
        <h5 class="fw-bold text-primary">
          <%= link_to post.title, user_car_post_path(post.car.user, post.car, post), class: "text-decoration-none" %>
        </h5>
        <p><%= simple_format(post.body) %></p>
      </div>
    </div>
  <% end %>
</div>