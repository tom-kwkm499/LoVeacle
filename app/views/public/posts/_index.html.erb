<div class="container">
  <% posts.each do |post| %>
    <div class="card mb-4 shadow-sm">
      <%= render 'public/posts/posted_user', post: post %>

      <!-- 中央：投稿画像 -->
      <% if post.post_image.attached? %>
        <div class="text-center mt-3">
          <%= image_tag post.post_image, class: "img-fluid rounded", style: "max-height: 200px;" %>
        </div>
      <% end %>

      <!-- 下部：タイトル + 内容 -->
      <div class="card-body">
        <h5 class="fw-bold text-primary">
          <%= link_to post.title, user_car_post_path(post.car.user, post.car, post), class: "text-decoration-none" %>
        </h5>
        <p><%= simple_format(post.body) %></p>
      </div>
    </div>
  <% end %>
</div>