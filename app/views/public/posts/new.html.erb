<div class="container">
  <h1>新規投稿</h1>
  <div class="row">
    <div class="col-7 mx-auto">
      <%= form_with model:@post, url: user_car_posts_path(current_user), local:true do |f| %>
        <div class="form-group">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :本文 %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>