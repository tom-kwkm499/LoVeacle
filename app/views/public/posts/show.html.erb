<div class="container mt-5">
  <div class="card shadow p-4">
    <div class="card-header bg-primary text-white">
      <h1 class="mb-0">投稿詳細</h1>
    </div>

    <div class="card-body">
      <h5 class="card-title">
        投稿者: 
        <%= link_to @post.car.user.name, user_path(@post.car.user), class: "badge bg-secondary text-white text-decoration-none" %>
      </h5>

      <h5 class="card-title mt-3">
        車種: <span class="badge bg-info text-dark"><%= @post.car.car_name %></span>
      </h5>

      <hr>

      <h3 class="text-decoration-underline mb-4"><%= @post.title %></h3>

      <p class="card-text fs-5"><%= simple_format(@post.body) %></p>
    </div>

    <div class="card-footer d-flex justify-content-end gap-2">
      <%= link_to '一覧に戻る', user_path(current_user), class: "btn btn-outline-primary mx-1" %>

      <% if current_user == @post.car.user %>
        <%= link_to '投稿編集', edit_user_car_post_path(@post.car.user, @post.car, @post), class: "btn btn-outline-warning mx-1" %>

        <%= link_to '投稿を削除', user_car_post_path(@post.car.user, @post.car, @post), 
                    method: :delete, 
                    data: { confirm: '本当に削除してもよろしいですか？' }, 
                    class: "btn btn-outline-danger mx-1" %>
      <% end %>
    </div>
  </div>
</div>
